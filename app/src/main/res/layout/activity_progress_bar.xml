<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.asus.progressbar.ProgressBarActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_launcher_background"/>

        <TextView android:text="Mon Exemple Progress Bar" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_tv_titre"
            android:textSize="26dp"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Afficher Progress Bar"
        android:id="@+id/progress_bt_start"
        android:layout_gravity="center"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/progress_pb_download" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:max="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avancement"
        android:textSize="26dp"
        android:id="@+id/seekbartv" />

</LinearLayout>
